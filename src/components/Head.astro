---
import "@styles/themes/orange.scss"
import { Font } from "astro:assets"

const { title, description } = Astro.props
---
<meta charset="UTF-8">
<link rel="icon" type="image/png" href="/favicon.ico" sizes="96x96" />
<meta name="viewport" content="width=device-width, initial-scale=1">


<title>{title != "" ? title + " | meizuflux" : "meizuflux"}</title>
<meta name="title" content={title}>
<meta name="description" content={description}>


<link rel="alternate" type="application/rss+xml" title="RSS Feed for meizuflux.com" href="/posts/feed.xml" />
<link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">

<Font cssVariable="--font-chivo" />

<style>
    body {
        font-family: var(--font-chivo);
    }
</style>