---
import BaseLayout from "./Base.astro";
import { getSimpleDate } from "@lib";

const { frontmatter } = Astro.props;
---
<BaseLayout title={frontmatter.title} description={frontmatter.description}>
    <div>
        <h1 style="margin-bottom: 0.5rem">{frontmatter.title}</h1>
        <p style="margin-bottom: 0.5rem" class="darker">{frontmatter.description}</p>
    </div>
    
    <p class="darker">Posted {frontmatter.created.toLocaleString("en", {"month": "long", "year": "numeric", "day": "numeric"})}</p>

    <article>
        <slot />
    </article>
</BaseLayout>

